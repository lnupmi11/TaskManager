@model TaskManager.DTO.Task.TaskItemDTO

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="background m-5 p-5">
        <h2 class="mb-3 card-header-border form-header">Details</h2>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.Priority)</p>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.Description)</p>
        </div>
        <div class="row">
            <div class="col col-sm-12 col-md-6">
                <div class="form-group">
                    <label asp-for="Progress" class="control-label"></label>
                    <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.Progress)</p>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label" id="StartDate"></label>
                    <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.StartDate)</p>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.EndDate)</p>
                </div>
            </div>
            <div class="col col-sm-12 col-md-6">
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.Category)</p>
                </div>
                <div class="form-group">
                    <label asp-for="Priority" class="control-label"></label>
                    <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.Priority)</p>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <p class="form-control bg-grey text-left">@Html.DisplayFor(model => model.Status)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <h3>Activity</h3>
        </div>
        @if (Model.Changes.Count == 0)
        {
            <p>No previous activity were tracked</p>
        }
        else
        {
            @foreach (var item in Model.Changes)
            {
                <div class="col-sm-12 m-3">
                    <div>
                        <strong>You</strong> <span class="text-muted">updated task on @item.ModifiedOn</span>
                        <div>
                            @item.Description
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Active">Back to List</a>
</div>
